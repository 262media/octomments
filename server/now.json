{
  "name": "octomments",
  "version": 2,
  "builds": [
    { "src": "assets/*.*", "use": "@now/static" },
    { "src": "api/*.*", "use": "@now/node" },
    { "src": "page/index.html", "use": "@now/static" }
  ],
  "routes": [
    { "src": "/octomments/issue", "dest": "/api/issue.js" },
    { "src": "/octomments/login", "dest": "/api/token.js" },
    { "src": "/assets/(.*)", "dest": "assets/$1" },
    { "src": "/(.*)", "dest": "page/index.html" }
  ]
}